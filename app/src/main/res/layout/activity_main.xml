<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="-50dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/cookie_monster"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/cookiemonster" />

        <Button
            android:id="@+id/btn_top"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Top Cookie" />

        <Button
            android:id="@+id/btn_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:padding="20dp"
            android:text="Bottom Cookie" />

        <Button
            android:id="@+id/btn_bottom_animated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:padding="20dp"
            android:text="Fancy Bottom Cookie" />

        <Button
            android:id="@+id/btn_extra_large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:padding="20dp"
            android:text="Extra Large Cookie"/>

        <Button
            android:id="@+id/btn_plain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:padding="20dp"
            android:text="Plain Cookie"/>

        <Button
            android:id="@+id/btn_custom_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:padding="20dp"
            android:text="Custom View Cookie"/>

        <Button
            android:id="@+id/btn_only_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:padding="20dp"
            android:text="only title"/>

        <Button
            android:id="@+id/btn_only_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:padding="20dp"
            android:text="only message"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
